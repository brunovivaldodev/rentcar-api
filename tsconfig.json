{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@modules/*" :["modules/*"],
      "@shared/*" :["shared/*"],
      "@config/*" : ["config/*"],
      "@utils/*" : ["utils/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
